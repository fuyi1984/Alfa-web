<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.alfa.web.dao.SysRoleMapper">

    <insert id="insertRole" parameterType="com.alfa.web.pojo.SysRole">
        <selectKey keyProperty="id" order="AFTER" resultType="java.lang.Long">
            SELECT LAST_INSERT_ID()
        </selectKey>
        insert into sysrole(role_name,types,status,createdDt,createdBy,version,typesname,statusname)
        value(#{role_name},#{types},#{status},#{createdDt},#{createdBy},#{version},#{typesname},#{statusname})
    </insert>

    <select id="findRole" resultType="com.alfa.web.pojo.SysRole">
        SELECT * FROM sysrole
    </select>
</mapper>