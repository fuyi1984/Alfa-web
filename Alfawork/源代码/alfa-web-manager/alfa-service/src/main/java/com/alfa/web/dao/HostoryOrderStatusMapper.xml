<mapper namespace="com.alfa.web.dao.HostoryOrderStatusMapper">

    <resultMap id="BaseResultMap" type="com.alfa.web.pojo.HostoryOrderStatus">

        <id column="id" property="id" jdbcType="BIGINT"/>
